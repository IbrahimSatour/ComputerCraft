function startPos()
  turtle.digDown() turtle.down() turtle.digDown()
end

function digLane()
  for i=1,15 do
    turtle.dig() turtle.forward() turtle.digDown()
  end
end

function turnRight()
  turtle.turnRight() turtle.dig() turtle.forward() turtle.digDown() turtle.turnRight()
end

function turnLeft()
  turtle.turnLeft() turtle.dig() turtle.forward() turtle.digDown() turtle.turnLeft()
end

function backToZero()
  turtle.turnRight() for i=1,15 do turtle.forward() end turtle.turnRight() turtle.down()
end

function layerDig()
  startPos()
  digLane() turnRight()
  digLane() turnLeft()
  digLane() turnRight()
  digLane() turnLeft()
  digLane() turnRight()
  digLane() turnLeft()
  digLane() turnRight()
  digLane() turnLeft()
  digLane() turnRight()
  digLane() turnLeft()
  digLane() turnRight()
  digLane() turnLeft()
  digLane() turnRight()
  digLane() turnLeft() 
  digLane() turnRight()
  digLane() backToZero()
end

layerDig(true)
